// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tables {
  id     Int    @id @default(autoincrement())
  status String
  slot   String
  seats  Int
}

model Booking {
  id    String @id @default(uuid())
  name  String
  order Order?
}

model Order {
  id      String   @id @default(uuid())
  name    String
  Booking Booking? @relation(fields: [bID], references: [id])
  bID     String   @unique
  // Menu    Menu[]
}

model Menu {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  // Order       Order[]
}
